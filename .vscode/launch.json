    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Powershell) xPro Debug",
            "type": "PowerShell",
            "request": "launch",
            "script": ".\\Profile.ps1",
            "cwd": "${workspaceFolder}",
            "args": ["-DebugFlag:$true"]
        }, 
        {
            "name": "g++.exe - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\xpro.${fileDirname}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file"
          }
    ]
}