{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build Pugi",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"${workspaceFolder}\\Sources\\xPro\\extern\\pugixml.cpp",
				"-c",
				"-o",
				"${workspaceFolder}\\Build\\pugixml.o",
				"-I${workspaceFolder}\\Sources",
				"-std=c++17"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-I${workspaceFolder}\\Sources",
				"-std=c++17",
				"*.o"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		}
	]
}